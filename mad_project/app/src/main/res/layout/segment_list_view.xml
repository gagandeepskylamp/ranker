<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout

    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/segment_list_view"
    android:background="@drawable/gradient"
    tools:context="com.example.mad_project.segment_display_activity">

    <com.baoyz.swipemenulistview.SwipeMenuListView
        android:id="@+id/segment_list_View"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="70dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="0dp"
        android:layout_marginLeft="0dp"
         />



    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/segment_add_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="16dp"
        android:layout_alignBottom="@+id/segment_list_View"
        android:layout_alignRight="@+id/segment_list_View"
        android:src="@drawable/plus_button"
        android:visibility="invisible"
        android:layout_marginEnd="16dp"
        android:layout_marginLeft="100dp"
        android:layout_alignEnd="@+id/segment_list_View"
        android:contentDescription="@string/add_segments"
        android:layout_marginStart="100dp" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:textColor="#ffffff"

        android:textSize="30sp"
        android:padding="4dp"
        android:layout_margin="4dp"
        android:textAlignment="center"
        android:gravity="center_horizontal" />


</RelativeLayout>

